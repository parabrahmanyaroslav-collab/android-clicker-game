<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Заголовок с количеством очков -->
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очки: 0"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"/>

    <!-- Информация о значении клика -->
    <TextView
        android:id="@+id/clickValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очков за клик: 1"
        android:textSize="18sp"
        android:layout_below="@id/scoreText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#666666"/>

    <!-- Главная кнопка для кликов -->
    <Button
        android:id="@+id/clickButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="КЛИК!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:background="@drawable/click_button_bg"
        android:textColor="#FFFFFF"
        android:elevation="8dp"/>

    <!-- Кнопка улучшения -->
    <Button
        android:id="@+id/upgradeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Улучшить (10 очков)"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="16dp"/>

</RelativeLayout>